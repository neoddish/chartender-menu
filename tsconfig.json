{
  "compilerOptions": {
    "jsx": "react",
    "target": "ES5",
    "module": "commonjs",
    "lib": ["DOM", "ESNext"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types"],
    "baseUrl": "."
  },
  "include": ["electron", "src"],
  "exclude": ["node_modules"]
}
